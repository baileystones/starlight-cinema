{
  "openapi": "3.0.0",
  "info": {
    "title": "Starlight Cinema API",
    "version": "1.0.0",
    "description": "API for managing employees and positions at Starlight Cinema"
  },
  "servers": [
    {
      "url": "https://starlight-cinema.onrender.com"
    },
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/employees": {
      "get": {
        "summary": "Get all employees",
        "responses": {
          "200": {
            "description": "A list of employees",
            "content": {
              "application/json": {
                "example": [
                  {
                    "_id": "123",
                    "firstName": "John",
                    "lastName": "Doe",
                    "email": "john.doe@example.com",
                    "phone": "555-678-1234"
                  }
                ]
              }
            }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "summary": "Create a new employee",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "firstName": "John",
                "lastName": "Doe",
                "email": "john.doe@example.com",
                "phone": "555-678-1234"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Employee created successfully" },
          "400": { "description": "Bad Request - Missing or invalid fields" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/employees/{id}": {
      "get": {
        "summary": "Get employee by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Employee retrieved successfully" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Employee not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "summary": "Update employee by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "firstName": "Jane",
                "lastName": "Doe",
                "email": "jane.doe@example.com",
                "phone": "555-123-5678"
              }
            }
          }
        },
        "responses": {
          "204": { "description": "No Content - Employee updated successfully" },
          "400": { "description": "Bad Request - Invalid ID or data" },
          "404": { "description": "Employee not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "summary": "Delete employee by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Employee deleted successfully" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Employee not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/positions": {
      "get": {
        "summary": "Get all positions",
        "responses": {
          "200": {
            "description": "A list of positions",
            "content": {
              "application/json": {
                "example": [
                  {
                    "_id": "456",
                    "title": "Usher",
                    "description": "Handles ticket scanning and seating"
                  }
                ]
              }
            }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "summary": "Create a new position",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "title": "Usher",
                "description": "Handles ticket scanning and seating"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Position created successfully" },
          "400": { "description": "Bad Request - Missing or invalid fields" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/positions/{id}": {
      "get": {
        "summary": "Get position by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Position retrieved successfully" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Position not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "summary": "Update position by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "title": "Lead Usher",
                "description": "Supervises ushers during shows"
              }
            }
          }
        },
        "responses": {
          "204": { "description": "No Content - Position updated successfully" },
          "400": { "description": "Bad Request - Invalid ID or data" },
          "404": { "description": "Position not found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "summary": "Delete position by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Position deleted successfully" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Position not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
