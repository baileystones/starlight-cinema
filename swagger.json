{
  "openapi": "3.0.0",
  "info": {
    "title": "Starlight Cinema API",
    "version": "1.0.0",
    "description": "API for managing employees and positions at Starlight Cinema"
  },
  "servers": [
    { "url": "https://starlight-cinema.onrender.com" },
    { "url": "http://localhost:3000" }
  ],
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid"
      }
    }
  },
  "security": [{ "cookieAuth": [] }],
  "paths": {
    "/employees": {
      "get": {
        "summary": "Get all employees",
        "responses": {
          "200": {
            "description": "A list of employees",
            "content": {
              "application/json": {
                "example": [
                  {
                    "firstName": "John",
                    "lastName": "Doe",
                    "email": "john.doe@example.com",
                    "phone": "555-678-1234",
                    "employeeId": "EMP001",
                    "hireDate": "2023-01-10",
                    "positionId": "456",
                    "trainedIn": {
                      "usher": true,
                      "door": false,
                      "box": false,
                      "concessions": false
                    }
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new employee",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "firstName": "John",
                "lastName": "Doe",
                "email": "john.doe@example.com",
                "phone": "555-678-1234",
                "employeeId": "EMP001",
                "hireDate": "2023-01-10",
                "positionId": "456",
                "trainedIn": {
                  "usher": true,
                  "door": false,
                  "box": false,
                  "concessions": false
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Employee created successfully" },
          "400": { "description": "Bad Request - Missing or invalid fields" }
        }
      }
    },
    "/employees/{employeeId}": {
      "parameters": [
        { "name": "employeeId", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "get": {
        "summary": "Get employee by ID",
        "responses": {
          "200": { "description": "Employee retrieved successfully" },
          "404": { "description": "Employee not found" }
        }
      },
      "put": {
        "summary": "Update employee by ID",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "firstName": "Jane",
                "lastName": "Doe",
                "email": "jane.doe@example.com",
                "phone": "555-123-5678",
                "trainedIn": { "box": true, "concessions": true }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Employee updated successfully" },
          "404": { "description": "Employee not found" }
        }
      },
      "delete": {
        "summary": "Delete employee by ID",
        "responses": {
          "200": { "description": "Employee deleted successfully" },
          "404": { "description": "Employee not found" }
        }
      }
    },
    "/positions": {
      "get": {
        "summary": "Get all positions",
        "responses": {
          "200": {
            "description": "A list of positions",
            "content": {
              "application/json": {
                "example": [
                  { "_id": "456", "title": "Usher", "description": "Cleans theaters", "payRate": 15.25 }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new position",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": { "title": "Manager", "description": "Oversees operations and staff", "payRate": 22.75 }
            }
          }
        },
        "responses": {
          "201": { "description": "Position created successfully" },
          "400": { "description": "Bad Request - Missing or invalid fields" }
        }
      }
    },
    "/positions/{positionId}": {
      "parameters": [
        { "name": "positionId", "in": "path", "required": true, "schema": { "type": "string" } }
      ],
      "get": {
        "summary": "Get position by ID",
        "responses": {
          "200": { "description": "Position retrieved successfully" },
          "404": { "description": "Position not found" }
        }
      },
      "put": {
        "summary": "Update position by ID",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": { "title": "Lead Usher", "description": "Supervises ushers during shifts", "payRate": 17.5 }
            }
          }
        },
        "responses": {
          "204": { "description": "Position updated successfully" },
          "404": { "description": "Position not found" }
        }
      },
      "delete": {
        "summary": "Delete position by ID",
        "responses": {
          "200": { "description": "Position deleted successfully" },
          "404": { "description": "Position not found" }
        }
      }
    }
  }
}